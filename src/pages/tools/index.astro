---
import Layout from '../../layouts/Layout.astro'
---

<link rel="manifest" href="/tools/manifest.json" />
<meta name="theme-color" content="#1a1a1a" />
<Layout>
  <div class="min-h-screen flex flex-col">
    <div class="grid w-full grid-cols-3 items-center justify-center gap-4 p-4">
      <a
        class="flex flex-col items-center justify-center p-2 rounded-lg hover:bg-gray-100/50 focus-visible:outline-none focus-visible:ring-1 dark:hover:bg-gray-800/50 dark:focus-visible:ring-gray-950"
        href="/tools/level"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-8 w-8"
        >
          <rect x="2" y="7" width="20" height="10" rx="3"></rect>
          <rect x="9" y="7" width="6" height="3" rx="1"></rect>
          <line x1="6" x2="6" y1="7" y2="17" stroke-width="1"></line>
          <line x1="18" x2="18" y1="7" y2="17" stroke-width="1"></line>
        </svg>
        <span class="text-xs mt-1 text-center">Bubble level</span>
      </a>
      <a
        class="flex flex-col items-center justify-center p-2 rounded-lg hover:bg-gray-100/50 focus-visible:outline-none focus-visible:ring-1 dark:hover:bg-gray-800/50 dark:focus-visible:ring-gray-950"
        href="/tools/location"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-8 w-8"
        >
          <path
            d="M4 14C4 12.9494 4.20693 11.9091 4.60896 10.9385C5.011 9.96793 5.60028 9.08601 6.34315 8.34314C7.08602 7.60028 7.96793 7.011 8.93853 6.60896C9.90914 6.20693 10.9494 6 12 6C13.0506 6 14.0909 6.20693 15.0615 6.60897C16.0321 7.011 16.914 7.60028 17.6569 8.34315C18.3997 9.08602 18.989 9.96793 19.391 10.9385C19.7931 11.9091 20 12.9494 20 14"
          ></path>
          <path
            d="M10 15C10 14.7374 10.0517 14.4773 10.1522 14.2346C10.2528 13.992 10.4001 13.7715 10.5858 13.5858C10.7715 13.4001 10.992 13.2528 11.2346 13.1522C11.4773 13.0517 11.7374 13 12 13C12.2626 13 12.5227 13.0517 12.7654 13.1522C13.008 13.2528 13.2285 13.4001 13.4142 13.5858C13.5999 13.7715 13.7473 13.992 13.8478 14.2346C13.9483 14.4773 14 14.7374 14 15"
          ></path>
          <path d="M13 13L15 10"></path>
          <path
            d="M20 14V15C20 15.5523 19.5523 16 19 16H5C4.44772 16 4 15.5523 4 15V14"
          ></path>
        </svg>
        <span class="text-xs mt-1 text-center">Speed/Location</span>
      </a>
    </div>
  </div>
</Layout>
