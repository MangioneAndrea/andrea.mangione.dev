---
import Layout from '../../layouts/Layout.astro'
---

<Layout>
<div class="min-h-screen flex flex-col">
  <div class="grid w-full max-w-4xl rounded-2xl border border-gray-200 bg-white shadow-lg overflow-hidden divide-y divide-gray-200 dark:border-gray-800 dark:bg-gray-950 dark:divide-gray-800">
    <div class="grid w-full grid-cols-3 items-center justify-center gap-4 p-4">
      <a
        class="flex flex-col items-center justify-center p-2 rounded-lg hover:bg-gray-100/50 focus-visible:outline-none focus-visible:ring-1 dark:hover:bg-gray-800/50 dark:focus-visible:ring-gray-950"
        href="/tools/level"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-8 w-8"
        >
	  <rect x="2" y="7" width="20" height="10" rx="3" />
	  <rect x="9" y="7" width="6" height="3" rx="1" />
	  <line x1="6" x2="6" y1="7" y2="17" stroke-width="1"/>
	  <line x1="18" x2="18" y1="7" y2="17" stroke-width="1"/>
        </svg>
        <span class="text-xs mt-1 text-center">Bubble level</span>
      </a>
    </div>
  </div>
</div>
</Layout>
