---
import Prism from "prismjs";
import "prismjs/themes/prism.css";
import "prismjs/themes/prism-okaidia.min.css";
import "prismjs/components/prism-kotlin.js";

const { code, language } = Astro.props;

// creates the prism classes
const prismClasses = `language-${language}`;

const formatted = Prism.highlight(code, Prism.languages[language], language);
console.log(formatted);
---

<pre
  class={prismClasses}>  <code>
    <Fragment set:html={formatted} />
  </code>
</pre>

<style>
  :global(span.token.operator) {
    background: none;
  }
</style>
